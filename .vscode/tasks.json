{
	"version": "2.0.0",

	"tasks":
	[
		{
			"label": "Configure CMake",
			"type": "shell",
			"command": "cmake",

			"args":
			[
				"-S", "${workspaceFolder}",
				"-B", "${workspaceFolder}/build"
			],

			"group":
			{
				"kind": "build",
				"isDefault": true
			},

			"problemMatcher": [],
			"detail": "Run CMake configuration"
		},

		{
			"label": "Build CMake",
			"dependsOn": "Configure CMake",
			"type": "shell",
			"command": "cmake",

			"args":
			[
				"--build", "${workspaceFolder}/build"
			],

			"group": "build",
			"problemMatcher": [],
			"detail": "Run CMake build"
		}
	]
  }
